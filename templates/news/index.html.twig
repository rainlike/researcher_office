{% extends 'base.html.twig' %}

{% block body %}
    <main role="main" class="container">
        <div class="row">
            <div class="col-md-8">
                <h3 class="pb-3 mb-4 font-weight-bold border-bottom">
                    Новини
                </h3>

                {% for article in content.articles %}
                    <div class="border-bottom pb-3 mb-4">
                        <h5 class="font-weight-bold">{{ article.title }}</h5>
                        <p class="text-muted">
                            {{ article.publishedAt|date }}
                            {% if article.author %}
                                by <a href="#" class="text-muted">{{ article.author }}</a>
                            {% endif %}
                        </p>

                        <p>{{ article.description }}</p>
                        <p>
                            <a href="{{ article.url }}" class="text-muted">Читати з джерела</a>
                        </p>
                    </div>
                {% endfor %}
            </div>

            <aside class="col-md-4">
                {% if sources.sources is not null %}
                    <div class="mb-3 border-bottom">
                        <h4 class="font-weight-bold">Джерела</h4>
                        <div class="ro-group">
                            {% for source in sources.sources %}
                                <a href="{{ source.url }}" class="ro-group--link">
                                    {{ source.name }}
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                <div class="p-3 mb-3 bg-light rounded">
                    <p>Зроблено за підтримки <a href="https://newsapi.org/">News API</a></p>
                    <p>Owner contact: <a href="mailto:support@newsapi.org">support@newsapi.org</a></p>
                </div>
            </aside>
        </div>
    </main>
{% endblock %}
